        .no-btn {
            background: linear-gradient(to right, #4361ee, #3a0ca3);
            color: white;
            position: absolute;
        }

        /* Popup messages */
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
