<body>
    <!-- Background floating elements -->
    <div id="floating-elements"></div>

    <!-- Main content -->
    <div class="container">
        <div class="header">
            <h1>Shalini ‚ù§Ô∏è Will You Be My Valentine?</h1>
            <p class="romantic-message">
                Every moment with you feels like a beautiful dream. Your smile lights up my world, 
                and your love fills my heart with joy. I can't imagine my life without you. 
                This Valentine's Day, I want to make it official and ask you...
            </p>
        </div>

        <div class="button-container">
            <button class="proposal-btn yes-btn" id="yesBtn">
                <i class="fas fa-heart"></i> YES! I'd Love To! üíñ
            </button>
            <button class="proposal-btn no-btn" id="noBtn">
                <i class="fas fa-times"></i> No üíî
            </button>
        </div>

        <div class="footer">
            <p>Made with <i class="fas fa-heart" style="color:#ff4d6d;"></i> for the most amazing person in my life</p>
        </div>
    </div>

    <!-- Popup for YES button -->
    <div class="popup" id="yesPopup">
        <div class="popup-content">
            <h2>Yayyy! üíï</h2>
            <p>I knew you'd say yes ü•∞ You've made me the happiest person in the world!</p>
            <img src="https://media.giphy.com/media/l4KhQ8QNq4Lk3YQKk/giphy.gif" alt="Happy bear" class="animal-gif">
            <button class="close-btn" id="closeYesBtn">Close</button>
        </div>
    </div>

    <!-- Second popup -->
    <div class="popup" id="secondPopup">
        <div class="popup-content">
            <h2>You're Purr-fect! üê±</h2>
            <p>Just like this cute kitty, you bring so much joy to my life! ‚ù§Ô∏è</p>
            <img src="https://media.giphy.com/media/vFKqnCdLPNOKc/giphy.gif" alt="Cute kitty" class="animal-gif">
            <button class="close-btn" id="closeSecondBtn">Close</button>
        </div>
    </div>

    <!-- Third popup -->
    <div class="popup" id="thirdPopup">
        <div class="popup-content">
            <h2>Bear-y Much in Love! üêª</h2>
            <p>I love you bear-y much! Thank you for saying yes! üíò</p>
            <img src="https://media.giphy.com/media/26tknCqiJrBQG6DrC/giphy.gif" alt="Love bear" class="animal-gif">
            <button class="close-btn" id="closeThirdBtn">Close</button>
        </div>
    </div>

    <!-- Music control -->
    <div class="music-control" id="musicControl">
        <i class="fas fa-music"></i>
    </div>

    <!-- Background audio -->
    <audio id="bgMusic" loop>
        <source src="https://assets.mixkit.co/music/preview/mixkit-loving-you-117.mp3" type="audio/mpeg">
    </audio>

    <script>
        // DOM elements
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const yesPopup = document.getElementById('yesPopup');
        const secondPopup = document.getElementById('secondPopup');
        const thirdPopup = document.getElementById('thirdPopup');
        const closeYesBtn = document.getElementById('closeYesBtn');
        const closeSecondBtn = document.getElementById('closeSecondBtn');
        const closeThirdBtn = document.getElementById('closeThirdBtn');
        const musicControl = document.getElementById('musicControl');
        const bgMusic = document.getElementById('bgMusic');
        const floatingElements = document.getElementById('floating-elements');

        // Create floating hearts and balloons
        function createFloatingElements() {
            const colors = ['#ff4d6d', '#ff8fa3', '#ffccd5', '#ffb3c1'];
            
            for (let i = 0; i < 25; i++) {
                // Create hearts
                const heart = document.createElement('div');
                heart.classList.add('floating-heart');
                heart.innerHTML = '‚ù§Ô∏è';
                
                // Random properties
                const size = Math.random() * 30 + 20;
                const color = colors[Math.floor(Math.random() * colors.length)];
                const left = Math.random() * 100;
                const duration = Math.random() * 10 + 10;
                const delay = Math.random() * 5;
                const animationType = Math.random() > 0.5 ? 'float' : 'floatFast';
                
                // Apply styles
                heart.style.left = `${left}vw`;
                heart.style.top = `${Math.random() * 100}vh`;
                heart.style.fontSize = `${size}px`;
                heart.style.color = color;
                heart.style.animation = `${animationType} ${duration}s ease-in-out ${delay}s infinite`;
                
                floatingElements.appendChild(heart);
                
                // Create balloons (every 3rd element)
                if (i % 3 === 0) {
                    const balloon = document.createElement('div');
                    balloon.classList.add('floating-balloon');
                    
                    const balloonLeft = Math.random() * 100;
                    const balloonDuration = Math.random() * 15 + 15;
                    const balloonDelay = Math.random() * 10;
                    
                    balloon.style.left = `${balloonLeft}vw`;
                    balloon.style.top = `${Math.random() * 100}vh`;
                    balloon.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    balloon.style.animation = `float ${balloonDuration}s ease-in-out ${balloonDelay}s infinite`;
                    
                    floatingElements.appendChild(balloon);
                }
            }
        }

        // Move the NO button when user tries to click it
        noBtn.addEventListener('mouseover', function() {
            const x = Math.random() * (window.innerWidth - this.offsetWidth);
            const y = Math.random() * (window.innerHeight - this.offsetHeight);
            
            this.style.left = `${x}px`;
            this.style.top = `${y}px`;
        });

        noBtn.addEventListener('touchstart', function(e) {
            e.preventDefault();
            const x = Math.random() * (window.innerWidth - this.offsetWidth);
            const y = Math.random() * (window.innerHeight - this.offsetHeight);
            
            this.style.left = `${x}px`;
            this.style.top = `${y}px`;
        });

        // YES button click - show first popup
        yesBtn.addEventListener('click', function() {
            yesPopup.style.display = 'flex';
            
            // Create heart explosion animation
            createHeartExplosion();
        });

        // Close first popup and show second
        closeYesBtn.addEventListener('click', function() {
            yesPopup.style.display = 'none';
            // Show second popup after a short delay
            setTimeout(() => {
                secondPopup.style.display = 'flex';
            }, 300);
        });

        // Close second popup and show third
        closeSecondBtn.addEventListener('click', function() {
            secondPopup.style.display = 'none';
            // Show third popup after a short delay
            setTimeout(() => {
                thirdPopup.style.display = 'flex';
            }, 300);
        });

        // Close third popup
        closeThirdBtn.addEventListener('click', function() {
            thirdPopup.style.display = 'none';
        });

        // Music control
        let isPlaying = false;
        musicControl.addEventListener('click', function() {
            if (isPlaying) {
                bgMusic.pause();
                musicControl.innerHTML = '<i class="fas fa-music"></i>';
            } else {
                bgMusic.play().catch(e => {
                    console.log("Autoplay prevented. User interaction required.");
                    // If autoplay is blocked, show a message
                    alert("Click the music button again to play the romantic background music!");
                });
                musicControl.innerHTML = '<i class="fas fa-pause"></i>';
            }
            isPlaying = !isPlaying;
        });

        // Create heart explosion animation
        function createHeartExplosion() {
            const colors = ['#ff4d6d', '#ff8fa3', '#ffccd5'];
            const container = document.querySelector('.container');
            
            for (let i = 0; i < 50; i++) {
                const heart = document.createElement('div');
                heart.innerHTML = '‚ù§Ô∏è';
                heart.style.position = 'absolute';
                heart.style.fontSize = `${Math.random() * 30 + 20}px`;
                heart.style.color = colors[Math.floor(Math.random() * colors.length)];
                heart.style.left = '50%';
                heart.style.top = '50%';
                heart.style.zIndex = '5';
                heart.style.pointerEvents = 'none';
                
                container.appendChild(heart);
                
                // Animate heart
                const angle = Math.random() * Math.PI * 2;
                const velocity = 2 + Math.random() * 3;
                const vx = Math.cos(angle) * velocity;
                const vy = Math.sin(angle) * velocity;
                
                let x = 0;
                let y = 0;
                let opacity = 1;
                
                const animateHeart = () => {
                    x += vx;
                    y += vy;
                    vy += 0.05; // gravity effect
                    opacity -= 0.02;
                    
                    heart.style.transform = `translate(${x}px, ${y}px)`;
                    heart.style.opacity = opacity;
                    
                    if (opacity > 0) {
                        requestAnimationFrame(animateHeart);
                    } else {
                        heart.remove();
                    }
                };
                
                animateHeart();
            }
        }

        // Initialize the page
        window.addEventListener('DOMContentLoaded', function() {
            createFloatingElements();
            
            // Try to autoplay music with user gesture
            document.body.addEventListener('click', function initMusic() {
                if (!isPlaying) {
                    bgMusic.play().then(() => {
                        isPlaying = true;
                        musicControl.innerHTML = '<i class="fas fa-pause"></i>';
                    }).catch(e => {
                        console.log("Autoplay prevented");
                    });
                }
                document.body.removeEventListener('click', initMusic);
            });
        });

        // Make sure the NO button stays within view on resize
        window.addEventListener('resize', function() {
            const rect = noBtn.getBoundingClientRect();
            if (rect.right > window.innerWidth) {
                noBtn.style.left = `${window.innerWidth - rect.width - 20}px`;
            }
            if (rect.bottom > window.innerHeight) {
                noBtn.style.top = `${window.innerHeight - rect.height - 20}px`;
            }
        });
    </script>
</body>
</html>
